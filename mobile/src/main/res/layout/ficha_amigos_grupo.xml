<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/rowBackgroun">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/amigos_imagen_usuario"
                android:layout_width="40dp"
                android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/amigos_imagen_usuario">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/amigos_nombre_usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7sp"
                android:textColor="@color/textColorPrimary"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/usuario_grupo_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/amigos_nombre_usuario"
                android:buttonTint="@color/colorAccent"/>
        </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>