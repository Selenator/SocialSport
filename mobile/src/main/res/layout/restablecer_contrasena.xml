<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/windowBackgraound"
    android:padding="10dp">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layoutLoginNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <EditText
            android:id="@+id/restablecer_texto_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/direccion_email2"
            android:inputType="textEmailAddress"
            android:textColor="@color/textColorPrimary" />
    </android.support.design.widget.TextInputLayout>
    <Button
        android:id="@+id/restablecer_boton"
        style="@style/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restablecer"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:textColor="@color/iconsTint"/>
</LinearLayout>